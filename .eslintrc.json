{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "warn",
    "max-len": ["error", { "code": 100, "ignoreStrings": true }],
    "max-lines-per-function": ["warn", { "max": 20, "skipBlankLines": true }]
  }
}
